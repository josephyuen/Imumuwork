<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/rl_fhome_item2_1"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="wrap_content">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_item_fhome_hotimg1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="150dp"
            android:layout_height="120dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/iv_item_fhome_hotimg1"
            android:id="@+id/tv_item_fhome_hottitle1"
            android:text="黄牛"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/iv_item_fhome_hotimg1"
            android:id="@+id/tv_item_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5188"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_fhome_item2_2"
        android:orientation="vertical"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="wrap_content">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_item_fhome_hotimg2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="150dp"
            android:layout_height="120dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/iv_item_fhome_hotimg2"
            android:id="@+id/tv_item_fhome_hottitle2"
            android:text="黄牛"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/iv_item_fhome_hotimg2"
            android:id="@+id/tv_item_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5188"/>

    </RelativeLayout>


</LinearLayout>