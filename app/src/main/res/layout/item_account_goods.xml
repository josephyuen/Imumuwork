<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:id="@+id/tv_accounts_goods_name"
        android:text="商品名称"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@mipmap/rb_backgrand"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginStart="16dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/mumu_logo"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/simpleDraweeView" />

        <TextView
            android:text="X1"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_accounts_goods_num"
            android:layout_marginEnd="16dp"
            android:layout_alignBottom="@+id/simpleDraweeView"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="￥优惠单价"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_accounts_goods_price"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/simpleDraweeView" />

        <TextView
            android:text="￥单价"
            android:id="@+id/tv_accounts_goods_originalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/simpleDraweeView"
            android:layout_alignStart="@+id/tv_accounts_goods_price" />

        <TextView
            android:text="产品规格:"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_accounts_goods_weight"
            android:layout_alignTop="@+id/simpleDraweeView"
            android:layout_alignStart="@+id/tv_accounts_goods_price" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/rb_backgrand">

        <TextView
            android:text="购买数量"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/tv_accounts_num"
            android:layout_marginEnd="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>



    <RelativeLayout
        android:background="@mipmap/rb_backgrand"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:text="买家留言:"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <EditText
            android:hint="选填：对本次交易的说明"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_marginStart="16dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@mipmap/rb_backgrand"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="小计"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="77dp"
            android:layout_alignBaseline="@+id/tv_accounts_goods_number"
            android:layout_alignBottom="@+id/tv_accounts_goods_number"
            android:layout_alignStart="@+id/tv_accounts_goods_number"
            android:id="@+id/textView6" />

        <TextView
            android:text="￥ 1699.00"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_accounts_subtotal"
            android:layout_alignTop="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"
            android:layout_marginStart="8dp" />

        <TextView
            android:text="共1件商品"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="148dp"
            android:id="@+id/tv_accounts_goods_number"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</LinearLayout>