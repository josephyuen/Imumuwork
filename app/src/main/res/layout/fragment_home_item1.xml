<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="150dp">


        <RelativeLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_homefrag"
                android:layout_width="fill_parent"
                android:layout_height="150dp" >
            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/vp_homefrag"
                android:background="#77000000"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dip" >


                <LinearLayout
                    android:id="@+id/ll_point_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>












        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp">

            <EditText
                android:paddingLeft="15dp"
                android:hint="输入关键字搜索商品"
                android:background="@drawable/login_edittext_background"
                android:id="@+id/et_home_search"
                android:layout_width="0px"
                android:layout_height="30dp"
                android:layout_weight="1"/>

            <ImageView
                android:src="@mipmap/rb_search"
                android:id="@+id/bt_home_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="搜索"
                />

        </LinearLayout>

    </FrameLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:clickable="true"
            android:id="@+id/ll_fhome_cub"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp">

            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/theme1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/iv_fhome_cub" />

            <TextView
                android:gravity="center"
                android:text="幼崽交易中心"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/ll_fhome_video"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/theme2"
                android:id="@+id/iv_fhome_video"
                />

            <TextView
                android:gravity="center"
                android:layout_below="@+id/iv_fhome_video"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="视频培育中心"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:clickable="true"
            android:id="@+id/ll_fhome_meat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_fhome_meat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="肉类交易中心" />
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/ll_fhome_farm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_fhome_farm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="农产品交易中心" />
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/ll_fhome_vip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_fhome_vip"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="VIP贵宾卡"
                android:id="@+id/textView8" />
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/ll_fhome_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_fhome_more"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="优惠活动中心"
                />
        </LinearLayout>


</LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="热卖商品:"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    </LinearLayout>