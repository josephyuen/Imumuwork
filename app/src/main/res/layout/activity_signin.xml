<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/my_toolbar"></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tit_signin_username"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp">

                <com.zumumu.imumu.ui.view.ClearEditText
                    android:id="@+id/et_signin_username"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="请输入昵称"
                    android:padding="8dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tit_signin_phone"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <com.zumumu.imumu.ui.view.ClearEditText
                    android:id="@+id/et_signin_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:padding="8dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tit_signin_pwd"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <com.zumumu.imumu.ui.view.ClearEditText
                    android:id="@+id/et_signin_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="请输入您的密码"
                    android:inputType="textPassword"
                    android:padding="8dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tit_signin_pwd_again"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <com.zumumu.imumu.ui.view.ClearEditText
                    android:id="@+id/et_signin_pwd_again"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="请再次输入您的密码"
                    android:inputType="textPassword"
                    android:padding="8dp" />
            </android.support.design.widget.TextInputLayout>

            <com.zumumu.imumu.ui.view.TimeButton
                android:id="@+id/bt_signin_verificationCode"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/buttonBackground"
                android:gravity="center"
                android:padding="4dp"
                android:text="获取验证码"
                android:textColor="@color/colorWhiteText"
                android:textSize="18dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tit_signin_verficationCode"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp">

                <com.zumumu.imumu.ui.view.ClearEditText
                    android:id="@+id/et_signin_verificationCode"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="请输入您收到的短信验证码"
                    android:padding="8dp" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_signin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tv_signin_userInfo"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="用户须知:" />

                <TextView
                    android:id="@+id/tv_signin_protocol"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="是否已阅读并同意此协议?"
                    android:textColor="@color/red" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_signin_submit"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/buttonBackground"
                android:text="完成注册"
                android:textColor="@color/colorWhiteText" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>