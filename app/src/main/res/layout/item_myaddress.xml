<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    >

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/login_edittext_background"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <TextView
                   android:id="@+id/tv_myaddress_receiver"
                   android:textColor="@color/black"
                   android:gravity="center"
                   android:text="收货人姓名:李佳胜"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>

               <TextView
                   android:id="@+id/tv_myaddress_phone"
                   android:textColor="@color/black"
                   android:gravity="center"
                   android:text="电话:15855562352"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>

               <TextView
                   android:id="@+id/myaddress_detail"
                   android:paddingLeft="10dp"
                   android:singleLine="true"
                   android:textColor="@color/black"
                   android:gravity="center"
                   android:text="详细地址:湖南省长沙市长沙县星沙****小区"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>

               <TextView
                   android:id="@+id/tv_myaddress_default"
                   android:textColor="@color/red"
                   android:gravity="center"
                   android:text="默认收货地址"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"/>

           </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_myaddress_delete"
            android:background="@color/colorAccent"
            android:text="删除"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_myaddress_arrow"
                android:background="@drawable/login_edittext_background"
                android:src="@mipmap/arrow"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                />


        </FrameLayout>


        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>