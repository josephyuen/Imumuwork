<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp">
    <RelativeLayout
        android:id="@+id/rl_orderaddress_location"
        android:background="@mipmap/rb_backgrand"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:text="收货人姓名"
            android:id="@+id/tv_orderaddress_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="电话"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_orderaddress_phone" />

        <TextView
            android:text="详细地址"
            android:id="@+id/tv_orderaddress_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_accounts_name"
            android:layout_alignParentStart="true"
            android:layout_marginTop="27dp" />

    </RelativeLayout>
</LinearLayout>